# ============================================
# 本地开发环境配置
# ============================================

# 数据库连接 (本地 PostgreSQL)
DATABASE_URL="postgresql://postgres:password123@localhost:5432/taskapp"
DIRECT_URL="postgresql://postgres:password123@localhost:5432/taskapp"

# 环境模式
NODE_ENV=development

# Next.js 配置
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-nextauth-secret-key-change-in-production

# JWT 配置
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# 安全配置
BCRYPT_SALT_ROUNDS=12

# 性能配置
NODE_OPTIONS=--max_old_space_size=2048

# 调试配置
DEBUG=true
LOG_LEVEL=debug

# 功能开关
FEATURE_AUTH_ENABLED=true
FEATURE_TASKS_ENABLED=true
FEATURE_POMODORO_ENABLED=true