# ============================================
# 数据库连接配置
# ============================================

# 生产环境数据库连接 (Supabase)
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
DIRECT_URL=postgresql://username:password@host:port/database?sslmode=require

# 开发环境数据库连接 (本地)
# DATABASE_URL=postgresql://postgres:password123@localhost:5432/taskapp
# DIRECT_URL=postgresql://postgres:password123@localhost:5432/taskapp

# ============================================
# 应用核心配置
# ============================================

# 环境模式
NODE_ENV=development

# Next.js 配置
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-at-least-32-characters-long

# JWT 配置
JWT_SECRET=your-jwt-secret-key-at-least-32-characters
JWT_EXPIRES_IN=7d

# ============================================
# 安全配置
# ============================================

# CORS 配置
NEXT_PUBLIC_API_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# 加密盐值
BCRYPT_SALT_ROUNDS=12

# ============================================
# 性能优化配置
# ============================================

# Node.js 内存配置
NODE_OPTIONS=--max_old_space_size=4096

# Next.js 构建优化
NEXT_TELEMETRY_DISABLED=1

# ============================================
# 功能开关配置
# ============================================

# 调试模式
DEBUG=false

# 日志级别
LOG_LEVEL=info

# 功能开关
FEATURE_AUTH_ENABLED=true
FEATURE_TASKS_ENABLED=true
FEATURE_POMODORO_ENABLED=true

# ============================================
# 第三方服务配置
# ============================================

# 邮件服务 (可选)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# 文件上传 (可选)
# UPLOAD_MAX_SIZE=10485760
# UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif