{
  "version": 3,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "buildCommand": "pnpm run vercel-build",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "DATABASE_URL": "file:/tmp/dev.db"
  },
  "build": {
    "env": {
      "DATABASE_URL": "file:/tmp/dev.db"
    }
  }
}